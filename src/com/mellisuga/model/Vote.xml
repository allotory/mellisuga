<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mellisuga.dao.VoteDAO">
    <!-- 插入 -->
    <!-- useGeneratedKeys设置为"true"表明要MyBatis获取由数据库自动生成的主键；
    	 keyProperty="id"指定把获取到的主键值注入到Vote的id属性--> 
    <insert id="insertVote" parameterType="Vote" useGeneratedKeys="true" keyProperty="id">
    	insert into vote(answer_id, voter_id, vote_type) 
    	values(#{answer_id}, #{voter_id}, #{vote_type})
    </insert>
    
    <!-- 更新 -->
    <update id="updateVote" parameterType="Vote">
    	update vote set 
    		answer_id = #{answer_id}, 
    		voter_id = #{voter_id}, 
    		vote_type = #{vote_type}
	    where id=#{id}
    </update>
    
    <!-- 删除 -->
    <delete id="deleteVoteById" parameterType="int">
    	delete from vote where id=#{id}
    </delete>
    
    <!-- 查询单一数据 -->
	<select id="queryVoteAUid" parameterType="java.util.HashMap" resultType="Vote">
        select * from vote where answer_id = #{answer_id} 
        	and voter_id = #{voter_id}
    </select>
    
    <!-- 返回多列 -->
    <resultMap id="VoteList" type="Vote">
    	<id column="id" property="id"/>
    	<result column="answer_id" property="answer_id"/>
    	<result column="voter_id" property="voter_id"/>
    	<result column="vote_type" property="vote_type"/>
    </resultMap>
    <select id="queryVoteByAid" parameterType="int" resultMap="VoteList">
        select * from vote where answer_id = #{answer_id} and vote_type='up'
    </select>
</mapper>


